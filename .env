# =============================================================================
# AI CALENDAR BOOKING AGENT - ENVIRONMENT CONFIGURATION EXAMPLE
# =============================================================================
# Copy this file to .env and fill in your actual values
# This file can be safely committed to version control

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
APP_NAME="AI Calendar Booking Agent"
APP_VERSION="1.0.0"
ENVIRONMENT="development"
DEBUG=true
LOG_LEVEL="INFO"

# =============================================================================
# STREAMLIT CONFIGURATION
# =============================================================================
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS="localhost"
STREAMLIT_SERVER_HEADLESS=false
STREAMLIT_THEME_PRIMARY_COLOR="#667eea"

# =============================================================================
# GOOGLE CALENDAR API
# =============================================================================
GOOGLE_CLIENT_ID="your-google-client-id.googleusercontent.com"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GOOGLE_PROJECT_ID="your-google-project-id"

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL="sqlite:///./calendar_agent.db"

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
SMTP_SERVER="smtp.gmail.com"
SMTP_PORT=587
SMTP_USERNAME="your-email@gmail.com"
SMTP_PASSWORD="your-app-password"
EMAIL_FROM="your-email@gmail.com"

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
OPENAI_API_KEY="sk-your-openai-api-key"
OPENAI_MODEL="gpt-3.5-turbo"

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY="change-this-in-production"
JWT_SECRET_KEY="your-jwt-secret-key"

# =============================================================================
# BUSINESS RULES
# =============================================================================
DEFAULT_MEETING_DURATION=60
BUSINESS_HOURS_START=9
BUSINESS_HOURS_END=17
DEFAULT_TIMEZONE="UTC"

# =============================================================================
# COMPANY SETTINGS
# =============================================================================
COMPANY_NAME="SujanTechSolutions"
COMPANY_EMAIL="ratab74082@gmail.com"